<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#000000"
    android:padding="16dp"
    android:id="@+id/main"
    tools:context=".Packages">

    <!-- Title -->
    <TextView
        android:id="@+id/tv_buy_packages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buy Additional Packages"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tv_select_plan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select perfect plan for you that options below!"
        android:textSize="14sp"
        android:textColor="#CCCCCC"
        android:layout_below="@id/tv_buy_packages"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:padding="8dp" />

    <LinearLayout
        android:id="@+id/panel1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:orientation="vertical"
        android:layout_below="@id/tv_select_plan"
        android:background="#222222"
        android:padding="16dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/panel1_name"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="default pack"
            android:textColor="#FFFFFF"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/panel1_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="300₺"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/panel1_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data: 30 GB"
            android:textColor="#FFFFFF"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/panel1_minutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minutes: 750 Min"
            android:textColor="#FFFFFF"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/panel1_sms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SMS: 100"
            android:textColor="#FFFFFF"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/panel2"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="16dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/panel1"
        android:background="#222222"
        android:padding="16dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/panel2_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="mennan pack"
            android:textColor="#FFFFFF"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/panel2_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="350₺"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/panel2_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data: 20 GB"
            android:textColor="#FFFFFF"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/panel2_minutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minutes: 1000 Min"
            android:textColor="#FFFFFF"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/panel2_sms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SMS: 150"
            android:textColor="#FFFFFF"
            android:textSize="16sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/panel3"
        android:layout_marginHorizontal="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/panel2"
        android:background="#222222"
        android:padding="16dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/panel3_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="eco pack"
            android:textColor="#FFFFFF"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/panel3_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200₺"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/panel3_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data: 8 GB"
            android:textColor="#FFFFFF"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/panel3_minutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minutes: 500 Min"
            android:textColor="#FFFFFF"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/panel3_sms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SMS: 75"
            android:textColor="#FFFFFF"
            android:textSize="16sp"/>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="16dp"
        android:layout_below="@id/panel3"
        android:text="Back"
        android:id="@+id/btn_back"
        android:backgroundTint="#ffffff"
        android:textColor="#000000"
        android:textSize="24sp"/>



</RelativeLayout>
